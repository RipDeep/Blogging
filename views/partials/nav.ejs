<div class="custom-notif-modal" id="customNotifModal">
  <div class="custom-notif-content">
    <span class="custom-close-btn" id="closeNotifModal">&times;</span>
    <h2>Notifications</h2>

    <div class="custom-notif-body">
      <% if (locals.notifications.length > 0) { %>
        <% locals.notifications.forEach(n => { %>
          <div
            class="custom-notif-item <%= n.read ? 'read' : 'unread' %>"
            data-id="<%= n._id %>"
            data-url="<%= (n.type === 'post' || n.type === 'comment' || n.type === 'like') ? '/blog/' + n.blog._id.toString() : '/profile/view/' + n.sender._id %>"
            style="cursor: pointer"
          >
            <img src="<%= n.sender.profileImageURL || '/default-avatar.png' %>" alt="Sender" class="notif-sender-img" />
            <div class="notif-text">
              <div class="notif-message"><%= n.message %></div>
              <small class="notif-date"><%= n.createdAt.toDateString() %></small>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-muted">No notifications</div>
      <% } %>
    </div>
