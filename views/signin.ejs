<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Sign In</title>
    <style>
      /* Body & Background */
      body {
        margin: 0;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
       
        overflow: hidden;


        background-color: #1e3a8a; /* Dark blue base */
        background-image: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.1) 25%,
            transparent 25%
          ),
          linear-gradient(225deg,  transparent, 25%, rgba(255, 255, 255, 0.1) 25%),
          linear-gradient(45deg , transparent, 25%, rgba(255, 255, 255, 0.1) 25%),
          linear-gradient(315deg,  #1e3a8a ,25%, rgba(255, 255, 255, 0.1) 25%);
        background-size: 60px 60px;
        background-repeat: repeat;
      }

      /* Form Card */
      .signin-container {
        margin-bottom: 150px;
        margin-top: 50px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 2.5rem 2rem;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.2);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .signin-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 16px 45px rgba(0, 0, 0, 0.25);
      }

      /* Title */
      .signin-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #1e1e2f;
      }

      /* Inputs */
      .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
        border-radius: 12px;
        border: 1px solid #d1d5db;
        font-size: 1rem;
        transition: all 0.3s ease;
      }

      .form-control:focus {
        outline: none;
       
        border-color: #4f46e5;
        box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.2);
      }

      label {
         margin-left: 7px;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.25rem;
        display: block;
        text-align: left;
      }

      .form-text {
        font-size: 0.85rem;
        color: #6b7280;
        margin-top: -0.5rem;
        margin-bottom: 0.75rem;
      }

      /* Button */
      .btn-modern {
        width: 100%;
        padding: 0.8rem 1rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 12px;
        border: none;
        color: #fff;
        background: linear-gradient(135deg, #4f46e5, #3b82f6);
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .btn-modern:hover {
        background: linear-gradient(135deg, #4338ca, #2563eb);
        transform: translateY(-2px);
        box-shadow: 0 6px 18px rgba(63, 81, 181, 0.3);
      }

      /* Loader Overlay */
      .loader-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(3px);
        z-index: 9999;
        justify-content: center;
        align-items: center;
      }

      .loader-box {
        background: #fff;
        padding: 40px 60px;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .spinner {
        width: 60px;
        height: 60px;
        border: 6px solid #e0e0e0;
        border-top: 6px solid #4f46e5;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 20px;
      }

      .login-link {
        text-align: center;
        margin-top: 1rem;
        font-size: 0.9rem;
        color: #4f46e5;
        font-weight: 500;
        transition: all 0.3s ease;
      }

      .login-link:hover {
        text-decoration: underline;
        color: #4338ca;
      }

      @keyframes spin {
        100% { transform: rotate(360deg); }
      }

      .loader-box p {
        font-size: 1.2rem;
        font-weight: 600;
        color: #333;
      }

      .loader-box .dots::after {
        content: '';
        display: inline-block;
        width: 0.6em;
        animation: blink 1s infinite steps(1);
      }

      @keyframes blink {
        0%, 20% { content: ''; }
        40% { content: '.'; }
        60% { content: '..'; }
        80%, 100% { content: '...'; }
      }
    </style>
  </head>

  <body>
    <%- include('./partials/nav') %>
    <div class="signin-container">
      <div class="signin-title">Sign In</div>
      <form id="signinForm" action="/user/signin" method="post">
        <div class="mb-3">
          <label for="email">Email address</label>
          <input type="email" name="email" class="form-control" id="email" placeholder="example@email.com" required />
          <div class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" required />
        </div>
        <button type="submit" class="btn-modern">Sign In</button>
        <div class="login-link">
        Don't have an account? <a href="/user/signup">Create</a>
      </div>
      </form>
    </div>
    

    <!-- Loader Overlay -->
    <div id="loader" class="loader-overlay">
      <div class="loader-box">
        <div class="spinner"></div>
        <p>Signing you in<span class="dots">...</span></p>
      </div>
    </div>

    <script>
      const form = document.getElementById("signinForm");
      const loader = document.getElementById("loader");

      form.addEventListener("submit", () => {
        loader.style.display = "flex"; // show loader
      });
    </script>

    <%- include('./partials/scripts') %>
  </body>
</html>
